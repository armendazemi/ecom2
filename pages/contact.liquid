{% include 'header' %}
{% include 'page_breadcrumbs' %}


<section class="section-padding-large">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="d-flex flex-column row-gap-200">
          {{ 'contact-eyebrow' | page_editable: class: 'eyebrow display-subheading' }}
          {{ 'contact-heading' | page_editable: class: 'display-xl-heading p-color-secondary' }}
        </div>
      </div>
    </div>

    <div class="row row-gap-300 margin-top-400 margin-top-lg-600">
      {% for i in (1..3) %}
        {% assign editableName = 'contact-square' | append: forloop.index %}
        {% capture hasContent %}{{ editableName | has_page_editable }}{% endcapture %}
        {% if hasContent == 'true' %}
          <div class="col-12 col-lg">
            {{ editableName | page_editable: class: "contact-square bg-brand-accent padding-400 padding-lg-600 display-sm-heading brand-links d-flex flex-column row-gap-200" }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>


<section class="section-padding-large bg-brand-accent">
  <div class="container">
    <div class="row align-items-center row-gap-400">
      <div class="col-lg-6 padding-right-lg-300">
        <div class="d-flex flex-column row-gap-400">
          {{ 'contact-callout' | page_editable: class: 'display-md-heading p-color-secondary d-flex flex-column row-gap-200' }}
          <div class="row row-gap-200">
            <div class="col-lg-6">
              {{ 'contact-callout-column-1' | page_editable: class: 'display-xs-heading p-color-secondary d-flex flex-column row-gap-150' }}
            </div>
            <div class="col-lg-6">
              {{ 'contact-callout-column-2' | page_editable: class: 'display-xs-heading p-color-secondary d-flex flex-column row-gap-150' }}
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6 padding-left-lg-300">
        {{ 'contact-callout-image' | page_editable: class: 'callout-image aspect-3-2--editable' }}
      </div>
    </div>
  </div>
</section>

<section class="section-padding-large">
  <div class="container">
    <div class="row justify-content-center row-gap-400 row-gap-lg-600">
      <div class="col-lg-8">
        <div class="d-flex flex-column row-gap-200 text-center">
          {{ 'contact-form-heading' | page_editable: class: 'display-md-heading p-color-secondary' }}
        </div>
      </div>

      <div class="col-lg-6">
        <form-component action="/forms/kontakt" method="post" modal="#contactModal">
          <div class="d-flex flex-column row-gap-300">
            <div class="row row-gap-300">
              <div class="col-lg-6">
                <label for="firstName">{{ "Förnamn" | t }}</label>
                <input class="input-default w-100 form-control" type="text" id="firstName" name="Förnamn" required>
                <div class="invalid-feedback">
                  {{ "Ange ditt förnamn" | t }}
                </div>
              </div>

              <div class="col-lg-6">
                <label for="lastName">{{ "Efternamn" | t }}</label>
                <input class="input-default w-100 form-control" type="text" id="lastName" name="Efternamn" required>
              </div>
              <div class="invalid-feedback">
                {{ "Ange ditt efternamn" | t }}
              </div>
            </div>

            <div class="col-12">
              <label for="email">{{ "Email" | t }}</label>
              <input class="input-default w-100 form-control" type="email" id="email" name="Email" required>
              <div class="invalid-feedback">
                {{ "Ange din email" | t }}
              </div>
            </div>

            <div class="col-12">
              <label for="message">{{ "Meddelande" | t }}</label>
              <textarea id="message" class="textarea-default padding-150 w-100 form-control" name="Meddelande" rows="4"
                        placeholder="{{ "Skriv ditt meddlande..." | t }}" required></textarea>
              <div class="invalid-feedback">
                {{ "Vänlig skriv vad det gäller" | t }}
              </div>
            </div>

            <div class="form-check d-flex align-items-center column-gap-75 flex-wrap">
              <input class="form-check-input" type="checkbox" name="policyAccept" id="policyAccept" required>
              <label class="form-check-label mb-0 text-md fw-regular" for="policyAccept">
                {{ "Jag godkänner" | t }} <a class="brand-link d-inline-flex" target="_blank"
                                             href="{% if locale != "sv" %}/{{ locale }}{% endif %}/policy">{{ "villkoren" | t }}</a>
              </label>
              <div class="invalid-feedback w-100">
                {{ "Du måste gokänna våra villkor" | t }}
              </div>
            </div>

            <div class="d-flex justify-content-center">
              <button type="submit" class="brand-button-primary">{{ "Skicka" | t }}</button>
            </div>
          </div>

        </form-component>
      </div>
    </div>
  </div>
</section>

{% assign centerImageLayout = true %}
{% include 'full_image_bg_cta' %}


