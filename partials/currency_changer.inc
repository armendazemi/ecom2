  <div
    class="dropdown position-absolute top-100 w-100 bg-white shadow-sm border-soft--1">
    <form-component action="/" method="post">
      <ul class="navbar-nav flex-column">
        {% for currency in store.currencies %}
          <li>
            <label
              class="text-primary text-md padding-y-125 padding-x-200 margin-0 d-flex align-items-center column-gap-125"
              for="locale-{{ currency.id }}">
              <input type="radio" name="currency" value="{{ currency.name }}" id="locale-{{ currency.id }}"
                     class="padding-x-200 padding-y-125 text-primary justify-content-start"
                     aria-label="{{ "Byt valuta till" | t }} {{ currency.name | upcase }}" {% if currency.id == store.currency.id %} checked {% endif %}>
              {{ currency.name | upcase }}
            </label>
          </li>
        {% endfor %}
      </ul>
    </form-component>
  </div>
