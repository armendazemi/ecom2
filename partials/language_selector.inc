    class="dropdown language-accordion__dropdown position-absolute top-100 bg-white shadow-md radius-sm">
    <div class="padding-y-100">
      {% for loc in site.locales %}
        <div class="d-flex align-items-center column-gap-150 padding-x-200 padding-y-100">
          <input type="radio" class="input-default" id="{{ loc }}" {% if loc == locale %} checked {% endif %}
                 data-locale-link="{{ loc }}">

          <label for="{{ loc }}">
            {% case loc %}
              {% when "sv" %}
                {{ "Svenska" | t }}
              {% when "en" %}
                {{ "English" | t }}
            {% endcase %}
          </label>
        </div>
      {% endfor %}
    </div>
